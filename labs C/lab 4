#include <stdio.h>
#include "lib.h"
#include <math.h>
#include <stdbool.h>

int main()
{
double a=0,b=0, c=0,p=0,S=0;
printf("Vvedite storonu a: ");
scanf("%lf", &a);
printf("Vvedite storonu b: ");
scanf("%lf", &b);
printf("Vvedite storonu c: ");
scanf("%lf", &c);
p=(a+b+c)/2;
S=sqrt(p*(p-a)*(p-b)*(p-c));
printf("p=%lf\n",p);
printf("S=%lf\n",S);
    return 0;
}
